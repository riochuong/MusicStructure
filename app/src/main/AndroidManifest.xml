<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="playmusic.jd.com.playmusicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/title_activity_current_playing" />
        <activity
            android:name=".MyArtistActivity"
            android:label="@string/title_activity_my_artist"
             />
        <activity
            android:name=".MyAlbumActivity"
            android:label="@string/title_activity_my_album"
            />
        <activity
            android:name=".MySongActivity"
            android:label="MySongActivity"
            />
        <activity
            android:name=".SearchActivityResult"
            android:label="@string/title_activity_search_result"
            ></activity>
    </application>

</manifest>